{
  "name": "@bifravst/http-api-mock",
  "version": "0.0.0-development",
  "description": "Helper functions for AWS lambdas written in TypeScript.",
  "exports": {
    "./*": {
      "import": {
        "types": "./dist/src/*.d.ts",
        "default": "./dist/src/*.js"
      }
    }
  },
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "prepublishOnly": "npx tsc --noEmit false --outDir ./dist -d",
    "test": "npx globstar -- npx tsx --test --test-reporter spec \"!(dist|node_modules)/**/*.spec.ts\""
  },
  "bin": {
    "http-api-mock": "cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bifravst/http-api-mock.git"
  },
  "bugs": {
    "url": "https://github.com/bifravst/http-api-mock/issues"
  },
  "homepage": "https://github.com/bifravst/http-api-mock",
  "keywords": [
    "aws",
    "lambda",
    "typescript"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/cdk",
    "dist/src",
    "cdk",
    "src",
    "cli.js",
    "LICENSE",
    "README.md"
  ],
  "prettier": "@bifravst/prettier-config",
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.606.0",
    "@aws-sdk/client-dynamodb": "^3.606.0",
    "@aws-sdk/client-sts": "^3.606.0",
    "@aws-sdk/util-dynamodb": "^3.606.0",
    "@bifravst/aws-cdk-lambda-helpers": "^1.8.21",
    "@bifravst/run": "^1.2.0",
    "@nordicsemiconductor/cloudformation-helpers": "^9.1.0",
    "@nordicsemiconductor/from-env": "^3.0.1",
    "aws-cdk-lib": "^2.147.2",
    "cdk": "^2.147.2",
    "chalk": "^5.3.0",
    "tsx": "^4.15.8"
  },
  "devDependencies": {
    "@bifravst/eslint-config-typescript": "6.1.6",
    "@bifravst/prettier-config": "1.0.3",
    "@commitlint/config-conventional": "19.2.2",
    "@types/aws-lambda": "8.10.140",
    "@types/node": "20.14.9",
    "globstar": "1.0.0",
    "husky": "9.0.11"
  }
}
